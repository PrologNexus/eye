@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix rule: <http://eyereasoner.github.io/rule#>.
@prefix : <urn:example:>.

# \Every x: type(x, Resource)
[] a rule:BackwardRule;
    rule:conclusion (
        (_:x rdf:type rdfs:Resource)
    );
    rule:premise ().

# Everybody loves somebody who is lonely
[] a rule:BackwardRule;
    rule:conclusion (
        (_:A :loves _:B)
    );
    rule:premise (
        ((_:A) log:skolem _:B)
    ).

[] a rule:BackwardRule;
    rule:conclusion (
        (_:B :is :lonely)
    );
    rule:premise (
        ((_:A) log:skolem _:B)
    ).

# queries
[] a rule:QueryRule;
    rule:premise (
        (:pat rdf:type rdfs:Resource)
    );
    rule:conclusion (
        (:pat rdf:type rdfs:Resource)
    ).

[] a rule:QueryRule;
    rule:premise (
        (:bob :loves _:x)
        (_:x :is :lonely)
    );
    rule:conclusion (
        (:bob :loves _:x)
        (_:x :is :lonely)
    ).
