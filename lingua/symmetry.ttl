# ----------------
# Symmetry example
# ----------------
#
# Same as RDF star inferencing

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <http://example.org/ns#>.

# facts
:alice :marriedTo :bob.
(lingua:conjunction :alice :marriedTo :bob) :since "1999".
:marriedTo a :SymmetricRelation.

# logic
:symmetry_rule a lingua:ForwardRule;
    lingua:premise (lingua:conjunction
        var:p rdf:type :SymmetricRelation
        var:s var:p var:o
    );
    lingua:conclusion (lingua:conjunction
        var:o var:p var:s
    ).

:symmetry_rule2 a lingua:ForwardRule;
    lingua:premise (lingua:conjunction
        var:p rdf:type :SymmetricRelation
        (lingua:conjunction var:s var:p var:o) var:p2 var:o2
    );
    lingua:conclusion (lingua:conjunction
        (lingua:conjunction var:o var:p var:s) var:p2 var:o2
    ).

# query
:symmetry_query a lingua:QueryRule;
    lingua:premise (lingua:conjunction
        :bob :marriedTo :alice
        (lingua:conjunction :bob :marriedTo :alice) :since "1999"
        (lingua:conjunction :alice var:p :bob) :since "1999"
    );
    lingua:conclusion (lingua:conjunction
        :bob :marriedTo :alice
        (lingua:conjunction :bob :marriedTo :alice) :since "1999"
        (lingua:conjunction :alice var:p :bob) :since "1999"
    ).
