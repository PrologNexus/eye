# ----------------
# Symmetry example
# ----------------
#
# Same as RDF star inferencing

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <http://example.org/ns#>.

# facts
:alice :marriedTo :bob.
[ lingua:conjunction (:alice :marriedTo :bob) ] :since "1999".
:marriedTo a :Symmetry.

# rules
:symmetry_rule a lingua:ForwardRule;
    lingua:premise [ lingua:conjunction (
        var:p rdf:type :Symmetry
        var:s var:p var:o
    ) ];
    lingua:conclusion [ lingua:conjunction (
        var:o var:p var:s
    ) ].

:symmetry_rule2 a lingua:ForwardRule;
    lingua:premise [ lingua:conjunction (
        var:p rdf:type :Symmetry
        var:x lingua:conjunction (var:s var:p var:o)
        var:x var:p2 var:o2
    ) ];
    lingua:conclusion [ lingua:conjunction (
        var:y lingua:conjunction (var:o var:p var:s)
        var:y var:p2 var:o2
    ) ].

# query
:symmetry_query a lingua:QueryRule;
    lingua:premise [ lingua:conjunction (
        :bob :marriedTo :alice
        var:x lingua:conjunction var:y
        var:x :since var:z
    ) ];
    lingua:conclusion [ lingua:conjunction (
        :bob :marriedTo :alice
        var:x lingua:conjunction var:y
        var:x :since var:z
    ) ].
