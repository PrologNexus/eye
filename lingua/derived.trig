# ------------
# Derived rule
# ------------
#
# Proving a derived rule.

@prefix string: <http://www.w3.org/2000/10/swap/string#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <#>.

:Alice a :Cat.
:Minka a :Cat.
:Charly a :Dog.

:main_rule lingua:premise term:main_rule_premise;
    lingua:conclusion term:main_rule_conclusion.

term:main_rule_premise {
    var:cat a :Cat.
}

term:main_rule_conclusion {
    :derived_rule lingua:premise term:derived_rule_premise;
        lingua:conclusion term:derived_rule_conclusion.
}

term:derived_rule_premise {
    var:dog a :Dog.
}

term:derived_rule_conclusion {
    :test :is true.
}

# query
:main_query lingua:question term:main_question.

term:main_question {
    :test :is var:result.
}
