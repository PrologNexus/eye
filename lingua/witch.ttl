@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <http://example.org/ns#>.

# \forall x : BURNS(x) /\ WOMAN(x) => WITCH(x
:witch_rule1 a lingua:ForwardRule;
    lingua:premise (
        var:X a :BURNS
        var:X a :WOMAN
    );
    lingua:conclusion (
        var:X a :WITCH
    ).

# WOMAN(GIRL
:GIRL a :WOMAN.

# \forall x : ISMADEOFWOOD(x) => BURNS(x
:witch_rule2 a lingua:ForwardRule;
    lingua:premise (
        var:X a :ISMADEOFWOOD
    );
    lingua:conclusion (
        var:X a :BURNS
    ).

# \forall x : FLOATS(x) => ISMADEOFWOOD(x
:witch_rule3 a lingua:ForwardRule;
    lingua:premise (
        var:X a :FLOATS
    );
    lingua:conclusion (
        var:X a :ISMADEOFWOOD
    ).

# FLOATS(DUCK
:DUCK a :FLOATS.

# \forall x,y : FLOATS(x) /\ SAMEWEIGHT(x,y) => FLOATS(y
:witch_rule4 a lingua:ForwardRule;
    lingua:premise (
        var:X a :FLOATS
        var:X :SAMEWEIGHT var:Y
    );
    lingua:conclusion (
        var:Y a :FLOATS
    ).

# and, by experiment
# SAMEWEIGHT(DUCK,GIRL
:DUCK :SAMEWEIGHT :GIRL.

# who's a witch?
:witch_query a lingua:QueryRule;
    lingua:premise (
        var:S a :WITCH
    );
    lingua:conclusion (
        var:S a :WITCH
    ).
