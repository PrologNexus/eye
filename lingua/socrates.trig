# ------------------
# Socrates Inference
# ------------------
#
# Infer that Socrates is mortal.

@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <#>.

# facts
:Socrates a :Human.
:Human rdfs:subClassOf :Mortal.

# rdfs subclass
:rdfs_subclass_rule a lingua:ForwardRule;
    lingua:premise _:rdfs_subclass_rule_premise;
    lingua:conclusion _:rdfs_subclass_rule_conclusion.

_:rdfs_subclass_rule_premise {
    var:A rdfs:subClassOf var:B.
    var:S a var:A.
}

_:rdfs_subclass_rule_conclusion {
    var:S a var:B.
}

# query
:socrates_query a lingua:QueryRule;
    lingua:premise _:socrates_query_graph;
    lingua:conclusion _:socrates_query_graph.

_:socrates_query_graph {
    var:S a :Mortal.
}
