# --------------
# Beetle example
# --------------
#
# See https://en.wikipedia.org/wiki/Disjunction_elimination
# using negation predicates

@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix term: <http://www.w3.org/2000/10/swap/term#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <#>.

# beetle is a car
:beetle a :Car.

# all cars are green or blue
:beetle_disj_rule1 lingua:premise term:beetle_disj_rule1_premise;
    lingua:conclusion term:beetle_disj_rule1_conclusion.

term:beetle_disj_rule1_premise {
    var:A a :Car.
    var:A :isNot :green.
}

term:beetle_disj_rule1_conclusion {
    var:A :is :blue.
}

:beetle_disj_rule2 lingua:premise term:beetle_disj_rule2_premise;
    lingua:conclusion term:beetle_disj_rule2_conclusion.

term:beetle_disj_rule2_premise {
    var:A a :Car.
    var:A :isNot :blue.
}

term:beetle_disj_rule2_conclusion {
    var:A :is :green.
}

# green things are beautiful
:beetle_beautiful_rule1 lingua:premise term:beetle_beautiful_rule1_premise;
    lingua:conclusion term:beetle_beautiful_rule1_conclusion.

term:beetle_beautiful_rule1_premise {
    var:A :is :green.
}

term:beetle_beautiful_rule1_conclusion {
    var:A :is :beautiful.
}

:beetle_beautiful_rule2 lingua:premise term:beetle_beautiful_rule2_premise;
    lingua:conclusion term:beetle_beautiful_rule2_conclusion.

term:beetle_beautiful_rule2_premise {
    var:A :isNot :beautiful.
}

term:beetle_beautiful_rule2_conclusion {
    var:A :isNot :green.
}

# blue things are beautiful
:beetle_beautiful_rule3 lingua:premise term:beetle_beautiful_rule3_premise;
    lingua:conclusion term:beetle_beautiful_rule3_conclusion.

term:beetle_beautiful_rule3_premise {
    var:A :is :blue.
}

term:beetle_beautiful_rule3_conclusion {
    var:A :is :beautiful.
}

:beetle_beautiful_rule4 lingua:premise term:beetle_beautiful_rule4_premise;
    lingua:conclusion term:beetle_beautiful_rule4_conclusion.

term:beetle_beautiful_rule4_premise {
    var:A :isNot :beautiful.
}

term:beetle_beautiful_rule4_conclusion {
    var:A :isNot :blue.
}

# assuming the negation of the query so that it can be discharged when the query succeeds
:beetle :isNot :beautiful.

# query
:beetle_query lingua:question term:beetle_question.

term:beetle_question {
    :beetle :is :beautiful.
}
