# superdense coding
:sdcoding_rule11 a lingua:ForwardRule;
    lingua:vars (
        _:N
        _:A
        _:B
        _:M
        _:X
        _:Y
        _:Z
        _:L
        _:S
        _:I
    );
    lingua:premise (lingua:graph
        (_:N :alice _:A)
        (_:B :bob _:M)
        ((1 ((_:X :r _:Y) (_:N :alice (_:X _:Z)) ((_:Z _:Y) :bob _:M)) _:L) log:collectAllIn _:S)
        (_:L list:length _:I)
        ((_:I 2) math:remainder 1)
    );
    lingua:conclusion (lingua:graph
        (_:N :sdcoding _:M)
    ).

# query
:sdcoding_query a lingua:QueryRule;
    lingua:vars (
        _:N
        _:M
    );
    lingua:premise (lingua:graph
        (_:N :sdcoding _:M)
    );
    lingua:conclusion (lingua:graph
        (() :sdcoding (_:N _:M))
    ).
