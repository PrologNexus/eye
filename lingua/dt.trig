# -------------
# Deep Taxonomy
# -------------
#
# See https://web.archive.org/web/20220119222608/http://responder.ruleml.org/WellnessRules/files/WellnessRulesN3-2009-11-10.pdf

@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix dt: <http://eulersharp.sourceforge.net/2009/12dtb/test#>.
@prefix : <#>.

# importing
:imports_rule a lingua:ForwardRule;
    lingua:premise _:imports_rule_premise;
    lingua:conclusion _:imports_rule_conclusion.

_:imports_rule_premise {
    <> log:imports <../reasoning/dt/test-dl.ttl>.
}

_:imports_rule_conclusion {
}

# rdfs subclass
:rdfs_subclass_rule a lingua:BackwardRule;
    lingua:conclusion _:rdfs_subclass_rule_conclusion;
    lingua:premise _:rdfs_subclass_rule_premise.

_:rdfs_subclass_rule_conclusion {
    var:S a var:B.
}

_:rdfs_subclass_rule_premise {
    var:A rdfs:subClassOf var:B.
    var:S a var:A.
}

# query
:dt_query a lingua:QueryRule;
    lingua:premise _:dt_query_graph;
    lingua:conclusion _:dt_query_graph.

_:dt_query_graph {
    var:X a dt:A2.
}
