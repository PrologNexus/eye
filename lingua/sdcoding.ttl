@prefix list: <http://www.w3.org/2000/10/swap/list#>.
@prefix math: <http://www.w3.org/2000/10/swap/math#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <http://example.org/ns#>.

# |R) = |0, 0) + |1, 1
:FALSE :r :FALSE.
:TRUE :r :TRUE.

# |S) = |0, 1) + |1, 0
:FALSE :s :TRUE.
:TRUE :s :FALSE.

# |U) = |0, 0) + |1, 0) + |1, 1
:FALSE :u :FALSE.
:TRUE :u :FALSE.
:TRUE :u :TRUE.

# |V ) = |0, 0) + |0, 1) + |1, 0
:FALSE :v :FALSE.
:FALSE :v :TRUE.
:TRUE :v :FALSE.

# 1 |0) = |0
:FALSE :id :FALSE.
# 1 |1) = |1
:TRUE :id :TRUE.

# G |0) = |1
:FALSE :g :TRUE.
# G |1) = |0
:TRUE :g :FALSE.

# K |0) = |0
:FALSE :k :FALSE.
# K |1) = |0) + |1
:TRUE :k :FALSE.
:TRUE :k :TRUE.

# KG
:sdcoding_rule1 a lingua:BackwardRule;
    lingua:conclusion (lingua:conjunction
        var:X :kg var:Y
    );
    lingua:premise (lingua:conjunction
        var:X :g var:Z
        var:Z :k var:Y
    ).

# GK
:sdcoding_rule2 a lingua:BackwardRule;
    lingua:conclusion (lingua:conjunction
        var:X :gk var:Y
    );
    lingua:premise (lingua:conjunction
        var:X :k var:Z
        var:Z :g var:Y
    ).

# Alice
:sdcoding_rule3 a lingua:BackwardRule;
    lingua:conclusion (lingua:conjunction
        0 :alice (var:X var:Y)
    );
    lingua:premise (lingua:conjunction
        var:X :id var:Y
    ).

:sdcoding_rule4 a lingua:BackwardRule;
    lingua:conclusion (lingua:conjunction
        1 :alice (var:X var:Y)
    );
    lingua:premise (lingua:conjunction
        var:X :g var:Y
    ).

:sdcoding_rule5 a lingua:BackwardRule;
    lingua:conclusion (lingua:conjunction
        2 :alice (var:X var:Y)
    );
    lingua:premise (lingua:conjunction
        var:X :k var:Y
    ).

:sdcoding_rule6 a lingua:BackwardRule;
    lingua:conclusion (lingua:conjunction
        3 :alice (var:X var:Y)
    );
    lingua:premise (lingua:conjunction
        var:X :kg var:Y
    ).

# Bob
:sdcoding_rule7 a lingua:BackwardRule;
    lingua:conclusion (lingua:conjunction
        (var:X var:Y) :bob 0
    );
    lingua:premise (lingua:conjunction
        var:X :gk var:Y
    ).

:sdcoding_rule8 a lingua:BackwardRule;
    lingua:conclusion (lingua:conjunction
        (var:X var:Y) :bob 1
    );
    lingua:premise (lingua:conjunction
        var:X :k var:Y
    ).

:sdcoding_rule9 a lingua:BackwardRule;
    lingua:conclusion (lingua:conjunction
        (var:X var:Y) :bob 2
    );
    lingua:premise (lingua:conjunction
        var:X :g var:Y
    ).

:sdcoding_rule10 a lingua:BackwardRule;
    lingua:conclusion (lingua:conjunction
        (var:X var:Y) :bob 3
    );
    lingua:premise (lingua:conjunction
        var:X :id var:Y
    ).

# superdense coding
:sdcoding_rule11 a lingua:ForwardRule;
    lingua:premise (lingua:conjunction
        var:N :alice var:A
        var:B :bob var:M
        (
            1
            (lingua:conjunction
                var:X :r var:Y
                var:N :alice (var:X var:Z)
                (var:Z var:Y) :bob var:M
            )
            var:L
        ) log:collectAllIn var:S
        var:L list:length var:I
        (var:I 2) math:remainder 1
    );
    lingua:conclusion (lingua:conjunction
        var:N :sdcoding var:M
    ).

# query
:sdcoding_query a lingua:QueryRule;
    lingua:premise (lingua:conjunction
        var:N :sdcoding var:M
    );
    lingua:conclusion (lingua:conjunction
        () :sdcoding (var:N var:M)
    ).
