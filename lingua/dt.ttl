@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <http://eulersharp.sourceforge.net/2009/12dtb/test#>.

# importing
:imports_rule a lingua:ForwardRule;
    lingua:premise (
        <> log:imports <../reasoning/dt/test-dl.ttl>
    );
    lingua:conclusion ().

# rdfs subclass
:rdfs_subclass_rule a lingua:BackwardRule;
    lingua:conclusion (
        var:S a var:B
    );
    lingua:premise (
        var:A rdfs:subClassOf var:B
        var:S a var:A
    ).

# query
:dt_query a lingua:QueryRule;
    lingua:premise (
        var:X a :A2
    );
    lingua:conclusion (
        var:X a :A2
    ).
