# --------------------
# Universal statements
# --------------------

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <#>.

# \Every x: type(x, Resource
:universal_statements_rule1 a lingua:BackwardRule;
    lingua:conclusion (
        var:X rdf:type rdfs:Resource
    );
    lingua:premise true.

# Everybody loves somebody who is lonely
:universal_statements_rule2 a lingua:BackwardRule;
    lingua:conclusion (
        var:A :loves var:B
    );
    lingua:premise (
        (var:A) log:skolem var:B
    ).

:universal_statements_rule3 a lingua:BackwardRule;
    lingua:conclusion (
        var:B :is :lonely
    );
    lingua:premise (
        (var:A) log:skolem var:B
    ).

# queries
:universal_statements_query1 a lingua:QueryRule;
    lingua:premise (
        :pat rdf:type rdfs:Resource
    );
    lingua:conclusion (
        :pat rdf:type rdfs:Resource
    ).

:universal_statements_query2 a lingua:QueryRule;
    lingua:premise (
        :bob :loves var:X
        var:X :is :lonely
    );
    lingua:conclusion (
        :bob :loves var:X
        var:X :is :lonely
    ).
