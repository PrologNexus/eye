# -----------------
# Fibonacci numbers
# -----------------
#
# See https://en.wikipedia.org/wiki/Fibonacci_number

@prefix math: <http://www.w3.org/2000/10/swap/math#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <#>.

# backward rules
:fibonacci_rule1 a lingua:BackwardRule;
    lingua:conclusion _:fibonacci_rule1_conclusion;
    lingua:premise _:fibonacci_rule1_premise.

_:fibonacci_rule1_conclusion {
    var:X :fibonacci var:Y.
}

_:fibonacci_rule1_premise {
    (var:X 0 1) :fib var:Y.
}

:fibonacci_rule2 a lingua:BackwardRule;
    lingua:conclusion _:fibonacci_rule2_conclusion;
    lingua:premise true.

_:fibonacci_rule2_conclusion {
    (0 var:A var:B) :fib var:A.
}

:fibonacci_rule3 a lingua:BackwardRule;
    lingua:conclusion _:fibonacci_rule3_conclusion;
    lingua:premise true.

_:fibonacci_rule3_conclusion {
    (1 var:A var:B) :fib var:B.
}

:fibonacci_rule4 a lingua:BackwardRule;
    lingua:conclusion _:fibonacci_rule4_conclusion;
    lingua:premise _:fibonacci_rule4_premise.

_:fibonacci_rule4_conclusion {
    (var:X var:A var:B) :fib var:Y.
}

_:fibonacci_rule4_premise {
    var:X math:greaterThan 1.
    (var:X 1) math:difference var:C.
    (var:A var:B) math:sum var:D.
    (var:C var:B var:D) :fib var:Y.
}

# query
:fibonacci_query a lingua:Query;
    lingua:question _:fibonacci_question;
    lingua:answer _:fibonacci_answer.

_:fibonacci_question {
    0 :fibonacci var:F1.
    1 :fibonacci var:F2.
    6 :fibonacci var:F3.
    91 :fibonacci var:F4.
    283 :fibonacci var:F5.
    3674 :fibonacci var:F6.
}

_:fibonacci_answer {
    () :fibonacci (0 var:F1).
    () :fibonacci (1 var:F2).
    () :fibonacci (6 var:F3).
    () :fibonacci (91 var:F4).
    () :fibonacci (283 var:F5).
    () :fibonacci (3674 var:F6).
}
