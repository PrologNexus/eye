# -----------------
# Fibonacci numbers
# -----------------
#
# See https://en.wikipedia.org/wiki/Fibonacci_number

@prefix math: <http://www.w3.org/2000/10/swap/math#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix term: <http://www.w3.org/2000/10/swap/term#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <#>.

# backward rules
:fibonacci_rule1 lingua:head term:fibonacci_rule1_head;
    lingua:body term:fibonacci_rule1_body.

term:fibonacci_rule1_head {
    (var:X) :fibonacci var:Y.
}

term:fibonacci_rule1_body {
    (var:X 0 1) :fib var:Y.
}

:fibonacci_rule2 lingua:head term:fibonacci_rule2_head;
    lingua:body true.

term:fibonacci_rule2_head {
    (0 var:A var:B) :fib var:A.
}

:fibonacci_rule3 lingua:head term:fibonacci_rule3_head;
    lingua:body true.

term:fibonacci_rule3_head {
    (1 var:A var:B) :fib var:B.
}

:fibonacci_rule4 lingua:head term:fibonacci_rule4_head;
    lingua:body term:fibonacci_rule4_body.

term:fibonacci_rule4_head {
    (var:X var:A var:B) :fib var:Y.
}

term:fibonacci_rule4_body {
    var:X math:greaterThan 1.
    (var:X 1) math:difference var:C.
    (var:A var:B) math:sum var:D.
    (var:C var:B var:D) :fib var:Y.
}

# query
:fibonacci_query lingua:question term:fibonacci_question.

term:fibonacci_question {
    (0) :fibonacci var:F1.
    (1) :fibonacci var:F2.
    (6) :fibonacci var:F3.
    (91) :fibonacci var:F4.
    (283) :fibonacci var:F5.
    (3674) :fibonacci var:F6.
}
