# -------------------------
# Rule and query generation
# -------------------------

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <http://example.org/ns#>.

:gen_rule a lingua:ForwardRule;
    lingua:premise true;
    lingua:conclusion [ lingua:conjunction (
        :Socrates rdf:type :Human
        :Human rdfs:subClassOf :Mortal
        :rdfs_subclass_rule rdf:type lingua:ForwardRule
        :rdfs_subclass_rule lingua:premise [ lingua:conjunction (
            var:A rdfs:subClassOf var:B
            var:S rdf:type var:A
        ) ]
        :rdfs_subclass_rule lingua:conclusion [ lingua:conjunction (
            var:S rdf:type var:B
        ) ]
        :socrates_query rdf:type lingua:QueryRule
        :socrates_query lingua:premise [ lingua:conjunction (
            var:S rdf:type :Mortal
        ) ]
        :socrates_query lingua:conclusion [ lingua:conjunction (
            var:S rdf:type :Mortal
        ) ]
    ) ].
