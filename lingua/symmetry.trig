# ----------------
# Symmetry example
# ----------------
#
# Same as RDF star inferencing

@prefix owl: <http://www.w3.org/2002/07/owl#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <#>.

# facts
:marriedTo a owl:SymmetricProperty.
:alice :marriedTo :bob.
:married_graph1 {
    :alice :marriedTo :bob.
}
:married_graph1 :since "1999".

# rules
:symmetry_rule1
    lingua:premise _:symmetry_rule1_premise;
    lingua:conclusion _:symmetry_rule1_conclusion.

_:symmetry_rule1_premise {
    var:y a owl:SymmetricProperty.
    var:x var:y var:z.
}

_:symmetry_rule1_conclusion {
    var:z var:y var:x.
}

:symmetry_rule2
    lingua:premise _:symmetry_rule2_premise;
    lingua:conclusion _:symmetry_rule2_conclusion.

_:symmetry_rule2_premise {
    var:y a owl:SymmetricProperty.
    _:symmetry_rule2_graph1 var:p var:o.
}

_:symmetry_rule2_conclusion {
    _:symmetry_rule2_graph2 var:p var:o.
}

_:symmetry_rule2_graph1 {
    var:x var:y var:z.
}

_:symmetry_rule2_graph2 {
    var:z var:y var:x.
}

# query
:symmetry_query
    lingua:question _:symmetry_question.

_:symmetry_question {
    var:x :marriedTo var:z.
    var:s :since var:o.
}
