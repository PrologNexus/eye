# ----------------
# Symmetry example
# ----------------
#
# Same as RDF star inferencing

@prefix owl: <http://www.w3.org/2002/07/owl#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <#>.

# facts
:marriedTo a owl:SymmetricProperty.
:married_graph1 :since "1999".
:married_graph1 {
    :alice :marriedTo :bob.
}

# rules
:symmetry_rule
    lingua:premise _:symmetry_rule_premise;
    lingua:conclusion _:symmetry_rule_conclusion.

_:symmetry_rule_premise {
    var:y a owl:SymmetricProperty.
    _:symmetry_rule_graph1 var:p var:o.
}

_:symmetry_rule_conclusion {
    _:symmetry_rule_graph2 var:p var:o.
}

_:symmetry_rule_graph1 {
    var:x var:y var:z.
}

_:symmetry_rule_graph2 {
    var:z var:y var:x.
}

# query
:symmetry_query
    lingua:question _:symmetry_question.

_:symmetry_question {
    var:x :since var:z.
}
