#!/bin/bash

# ackermann(4, 2)
echo ackermann42.trig
eye --quiet --skolem-genid 8b98b360-9a70-4845-b52c-c675af60ad01 --nope ackermann42.trig --output answer/ackerman42.trig 2> /dev/null
echo ""

# all cases together
echo allcases.trig
eye --quiet --skolem-genid 8b98b360-9a70-4845-b52c-c675af60ad01 --nope ../*.trig --output answer/allcases.trig 2> /dev/null
eye --quiet --skolem-genid 8b98b360-9a70-4845-b52c-c675af60ad01 ../*.trig --output proof/allcases.trig 2> /dev/null
echo ""

# test with riot input
pushd .. > /dev/null
for file in *.trig
do
    echo $file
    riot --out trig $file | eye --quiet --nope - --output temp/answer/$file 2> /dev/null
    riot --out trig $file | eye --quiet - --output temp/proof/$file 2> /dev/null
done
popd > /dev/null

# check
git diff
