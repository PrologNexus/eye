@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix : <http://example.org/ns#>.

# facts
:Socrates a :Human, :Immortal.
:Human rdfs:subClassOf :Mortal.

# rdfs subclass
:rdfs_subclass_rule a lingua:ForwardRule;
    lingua:vars (
        _:A
        _:B
        _:S
    );
    lingua:premise (lingua:graph
        (_:A rdfs:subClassOf _:B)
        (_:S rdf:type _:A)
    );
    lingua:conclusion (lingua:graph
        (_:S rdf:type _:B)
    ).

# inference fuse
:fuse a lingua:ForwardRule;
    lingua:vars (
        _:S
    );
    lingua:premise (lingua:graph
        (_:S rdf:type :Mortal)
        (_:S rdf:type :Immortal)
    );
    lingua:conclusion false.

# query
:socrates_query a lingua:QueryRule;
    lingua:vars (
        _:S
    );
    lingua:premise (lingua:graph
        (_:S rdf:type :Mortal)
    );
    lingua:conclusion (lingua:graph
        (_:S rdf:type :Mortal)
    ).
