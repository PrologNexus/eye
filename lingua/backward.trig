# ---------------------
# Backward rule example
# ---------------------
#
# See https://www.w3.org/2000/10/swap/doc/tutorial-1.pdf page 17

@prefix math: <http://www.w3.org/2000/10/swap/math#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <#>.

# something is more interesting if it is greater
:backward_rule a lingua:BackwardRule;
    lingua:conclusion :backward_rule_conclusion;
    lingua:premise :backward_rule_premise.

GRAPH :backward_rule_conclusion {
    var:X :moreInterestingThan var:Y
}

GRAPH :backward_rule_premise {
    var:X math:greaterThan var:Y
}

# query
:backward_query a lingua:QueryRule;
    lingua:premise :backward_query_premise;
    lingua:conclusion :backward_query_conclusion.

GRAPH :backward_query_premise {
    5 :moreInterestingThan 3
}

GRAPH :backward_query_conclusion {
    5 :moreInterestingThan 3
}
