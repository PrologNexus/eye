# -----------------
# Mathijs Inference
# -----------------
#
# Infer R given P -> Q and (P -> Q) -> R

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <#>.

# rule A
:rule_a a lingua:ForwardRule;
    lingua:premise (lingua:graphTerm
        :P :is true
    );
    lingua:conclusion (lingua:graphTerm
        :Q :is true
    ).

# rule B
:rule_b a lingua:ForwardRule;
    lingua:premise (lingua:graphTerm
        :rule_a rdf:type lingua:ForwardRule
        :rule_a lingua:premise (lingua:graphTerm
            :P :is true
        )
        :rule_a lingua:conclusion (lingua:graphTerm
            :Q :is true
        )
    );
    lingua:conclusion (lingua:graphTerm
        :R :is true
    ).

# query
:query_r a lingua:QueryRule;
    lingua:premise (lingua:graphTerm
        :R :is true
    );
    lingua:conclusion (lingua:graphTerm
        :R :is true
    ).
