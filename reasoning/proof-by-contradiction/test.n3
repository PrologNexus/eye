@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/#>.

# x saying A
:x :saying :A.

# saying A means saying C
{
    ?S :saying :A.
} => {
    ?S :saying :C.
}.

# adding the negation of the query
{
    ?X :saying :C.
} => ($ $).

# proof by contradiction
{
    {
        ?P => ($ $).
    } log:call ?P.
} => {
    ?P :provedBy :contradiction.
}.
