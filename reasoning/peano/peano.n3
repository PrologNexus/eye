@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/#>.

# add
{(?A 0) :add ?A} <= true.

{(?A << :s log:term (?B) >>) :add << :s log:term (?C) >>} <= {
    (?A ?B) :add ?C.
}.

# multiply
{(?A 0) :multiply 0} <= true.

{(?A << :s log:term (?B) >>) :multiply ?C} <= {
    (?A ?B) :multiply ?D.
    (?A ?D) :add ?C.
}.

# factorial
{?A :factorial ?B} <= {
    (?A << :s log:term (0) >>) :fac ?B.
}.

{(0 ?A) :fac ?A} <= true.

{(<< :s log:term (?A) >> ?B) :fac ?C} <= {
    (?B << :s log:term (?A) >>) :multiply ?D.
    (?A ?D) :fac ?C.
}.

# query
{
    (<< :s log:term (0) >> << :s log:term (<< :s log:term (0) >>) >>) :multiply ?A.
    (?A << :s log:term (<< :s log:term (<< :s log:term (0) >>) >>) >>) :add ?B.
    ?B :factorial ?C.
} =^ {
    ?B :factorial ?C.
}.
