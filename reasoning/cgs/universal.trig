# --------------------
# Universal statements
# --------------------

@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <#>.

# \Every x: type(x, Resource
_:cgs_1 log:isImpliedBy true.

_:cgs_1 {
    var:X a rdfs:Resource.
}

# Everybody loves somebody who is lonely
_:cgs_2 log:isImpliedBy _:cgs_3.

_:cgs_2 {
    var:A :loves var:B.
}

_:cgs_3 {
    (var:A) log:skolem var:B.
}

_:cgs_4 log:isImpliedBy _:cgs_5.

_:cgs_4 {
    var:B :is :lonely.
}

_:cgs_5 {
    (var:A) log:skolem var:B.
}

# queries
_:cgs_6 log:query _:cgs_6.

_:cgs_6 {
    :pat a rdfs:Resource.
}

_:cgs_7 log:query _:cgs_7.

_:cgs_7 {
    :bob :loves var:X.
    var:X :is :lonely.
}
