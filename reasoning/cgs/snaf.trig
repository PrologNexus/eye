# --------------------------
# Scoped Negation As Failure
# --------------------------

@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix : <#>.

# facts
:Alice :loves :Bob.
:Bob a :Person.

# rule
_:cgs_1 log:implies _:cgs_2.

_:cgs_1 {
    var:SCOPE log:notIncludes _:cgs_3.
    var:X a :Person.
}

_:cgs_2 {
  :Alice :hates :Nobody.
}

_:cgs_3 {
    :Alice :hates var:X.
}

# query
_:cgs_4 log:query _:cgs_4.

_:cgs_4 {
    var:s :hates var:o.
}
