# --------------
# Beetle example
# --------------
#
# See https://en.wikipedia.org/wiki/Disjunction_elimination

@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/#>.

# beetle is a car
:beetle a :Car.

# all cars are green or blue
(_:A) log:npn (_:bng_1 _:bng_2).

_:bng_1 {
    _:A a :Car.
    () log:npn (_:bng_3 false).
}

_:bng_2 {
    _:A :is :green.
}

_:bng_3 {
    _:A :is :blue.
}

# green things are beautiful
(_:A) log:npn (_:bng_4 _:bng_5).

_:bng_4 {
    _:A :is :green.
}

_:bng_5 {
    _:A :is :beautiful.
}

# blue things are beautiful
(_:A) log:npn (_:bng_6 _:bng_7).

_:bng_6 {
    _:A :is :blue.
}

_:bng_7 {
    _:A :is :beautiful.
}

# query
(_:A) log:npn (_:bng_8 _:bng_8).
_:bng_8 a log:Answer.

_:bng_8 {
    :beetle :is :beautiful.
}
