@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/#>.

# Examples from "Neeltje Komt Dinsdag In Evakostuum" , M.C. Gomperts

:Tweety a :Bird.

## Syllogism 1 : Camestres

# All cats are mammals
(_:Cat) log:npn (_:bng_1 _:bng_2).

_:bng_1 {
    _:Cat a :Cat.
}

_:bng_2 {
    _:Cat a :Mammal.
}

# No bird is a mammal
(_:Bird) log:npn (_:bng_3 false).

_:bng_3 {
    _:Bird a :Bird.
    _:Bird a :Mammal.
}

# IMPLIES: Bird is not a Cat

## Syllogism 2 : Datasi

# All cats are feline
(_:Cat) log:npn (_:bng_4 _:bng_5).

_:bng_4 {
    _:Cat a :Cat.
}

_:bng_5 {
    _:Cat a :Feline.
}

# Some cats are white
_:X a :Cat , :White.

# IMPLIES : Some white are feline 

# Syllogism 3 : Ferio

# No muslim is a christian
(_:M) log:npn (_:bng_6 false).

_:bng_6 {
    _:M a :Muslim.
    _:M a :Christian.
}

# Some worshippers are muslim
_:P a :Worshipper , :Muslim.

# IMPLIES : Some worshipper is not a christian 

() log:npn (_:bng_7 false).

_:bng_7 {
    # 1
    () log:npn (_:bng_8 false).

    # 2 
    _:X a :White, :Feline.

    # 3
    () log:npn (_:bng_9 false).

    () log:npn (_:bng_10 false).
}

_:bng_8 {
    :Tweety a :Cat.
}

_:bng_9 {
    _:P a :Christian.
}

_:bng_10 {
    :test :is true.
}

# Test
() log:npn (_:bng_11 _:bng_11).
_:bng_11 a log:Answer.

_:bng_11 {
    :test :is true.
}
