# --------------
# Beetle example
# --------------
#
# See https://en.wikipedia.org/wiki/Disjunction_elimination

@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/#>.

# beetle is a car
:beetle a :Car.

# all cars are green or blue
(_:A) log:npn (_:bng_1 _:bng_2).

_:bng_1 {
    _:A a :Car.
    () log:npn (_:bng_3 false).
}

_:bng_2 {
    _:A :is :green.
}

_:bng_3 {
    _:A :is :blue.
}

# green things are nice or pretty
(_:A) log:npn (_:bng_4 _:bng_5).

_:bng_4 {
    _:A :is :green.
    () log:npn (_:bng_6 false).
}

_:bng_5 {
    _:A :is :nice.
}

_:bng_6 {
    _:A :is :pretty.
}

# pretty things are pretty 1 or pretty 2
(_:A) log:npn (_:bng_7 _:bng_8).

_:bng_7 {
    _:A :is :pretty.
    () log:npn (_:bng_9 false).
}

_:bng_8 {
    _:A :is :pretty1.
}

_:bng_9 {
    _:A :is :pretty2.
}

# nice things are nice 1 or nice 2
(_:A) log:npn (_:bng_10 _:bng_11).

_:bng_10 {
    _:A :is :nice.
    () log:npn (_:bng_12 false).
}

_:bng_11 {
    _:A :is :nice1.
}

_:bng_12 {
    _:A :is :nice2.
}

# pretty 1 things are pretty 11 or pretty 12
(_:A) log:npn (_:bng_13 _:bng_14).

_:bng_13 {
    _:A :is :pretty1.
    () log:npn (_:bng_15 false).
}

_:bng_14 {
    _:A :is :pretty11.
}

_:bng_15 {
    _:A :is :pretty12.
}

# pretty 2 things are pretty 21 or pretty 22
(_:A) log:npn (_:bng_16 _:bng_17).

_:bng_16 {
    _:A :is :pretty2.
    () log:npn (_:bng_18 false).
}

_:bng_17 {
    _:A :is :pretty21.
}

_:bng_18 {
    _:A :is :pretty22.
}

# nice 1 things are nice 11 or nice 12
(_:A) log:npn (_:bng_19 _:bng_20).

_:bng_19 {
    _:A :is :nice1.
    () log:npn (_:bng_21 false).
}

_:bng_20 {
    _:A :is :nice11.
}

_:bng_21 {
    _:A :is :nice12.
}

# nice 2 things are nice 21 or nice 22
(_:A) log:npn (_:bng_22 _:bng_23).

_:bng_22 {
    _:A :is :nice2.
    () log:npn (_:bng_24 false).
}

_:bng_23 {
    _:A :is :nice21.
}

_:bng_24 {
    _:A :is :nice22.
}

# pretty or nice or blue things are beautiful
(_:A) log:npn (_:bng_25 false).

_:bng_25 {
    () log:npn (_:bng_26 false).
    () log:npn (_:bng_36 false).
}

_:bng_26 {
    () log:npn (_:bng_27 false).
    () log:npn (_:bng_28 false).
    () log:npn (_:bng_29 false).
    () log:npn (_:bng_30 false).
    () log:npn (_:bng_31 false).
    () log:npn (_:bng_32 false).
    () log:npn (_:bng_33 false).
    () log:npn (_:bng_34 false).
    () log:npn (_:bng_35 false).
}

_:bng_27 {
    _:A :is :pretty11.
}
_:bng_28 {
    _:A :is :pretty12.
}

_:bng_29 {
    _:A :is :pretty21.
}

_:bng_30 {
    _:A :is :pretty22.
}

_:bng_31 {
    _:A :is :nice11.
}

_:bng_32 {
    _:A :is :nice12.
}

_:bng_33 {
    _:A :is :nice21.
}

_:bng_34 {
    _:A :is :nice22.
}

_:bng_35 {
    _:A :is :blue.
}

_:bng_36 {
    _:A :is :beautiful.
}

# query
(_:A) log:npn (_:bng_37 _:bng_37).
_:bng_37 a log:Answer.

_:bng_37 {
    :beetle :is :beautiful.
}
