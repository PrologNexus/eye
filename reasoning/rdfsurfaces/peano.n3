# ----------------
# Peano arithmetic
# ----------------
#
# See https://en.wikipedia.org/wiki/Peano_axioms

@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <#>.

# add
(_:A) log:nand {
    () log:nand <<(_:A 0) :add _:A>>.
}.

(_:A _:B _:C) log:nand {
    () log:nand <<(_:A (:s _:B)) :add (:s _:C)>>.
    (_:A _:B) :add _:C.
}.

# multiply
(_:A) log:nand {
    () log:nand <<(_:A 0) :multiply 0>>.
}.

(_:A _:B _:C _:D) log:nand {
    () log:nand <<(_:A (:s _:B)) :multiply _:C>>.
    (_:A _:B) :multiply _:D.
    (_:A _:D) :add _:C.
}.

# factorial
(_:A _:B) log:nand {
    () log:nand <<_:A :factorial _:B>>.
    (_:A (:s 0)) :fac _:B.
}.

(_:A) log:nand {
    () log:nand <<(0 _:A) :fac _:A>>.
}.

(_:A _:B _:C _:D) log:nand {
    () log:nand <<((:s _:A) _:B) :fac _:C>>.
    (_:B (:s _:A)) :multiply _:D.
    (_:A _:D) :fac _:C.
}.

# question
{
    ((:s 0) (:s (:s 0))) :add ?A.
    (?A (:s (:s 0))) :multiply ?B.
    ?B :factorial ?C.
} log:query {
    :result :is ?C.
}.
