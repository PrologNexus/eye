@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/#>.

# x saying A
:x :saying :A.

# x not saying C
{
    :x :saying :C.
} log:clause ($ $).

# saying A means saying B or saying C
{
    ?S :saying :A.
} log:clause ($
    {
        ?S :saying :B.
    } {
        ?S :saying :C.
    }
$).

# proof by contrapositive
{
    ?P log:clause ($ ?A ?B $).
    ?P log:call true.
    ?A log:clause ($ $).
} log:query ?B.

{
    ?P log:clause ($ ?A ?B $).
    ?P log:call true.
    ?B log:clause ($ $).
} log:query ?A.
