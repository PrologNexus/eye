@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/#>.

# x saying A
:x :saying :A.

# x not saying C
{
    :x :saying :C.
} log:impliesOneOf ().

# saying A means saying B or saying C
{
    ?S :saying :A.
} log:impliesOneOf (
    {
        ?S :saying :B.
    } {
        ?S :saying :C.
    }
).

# proof by contrapositive
{
    ?P log:impliesOneOf (?A ?B).
    ?P log:call true.
    ?A log:impliesOneOf ().
} log:query ?B.

{
    ?P log:impliesOneOf (?A ?B).
    ?P log:call true.
    ?B log:impliesOneOf ().
} log:query ?A.
