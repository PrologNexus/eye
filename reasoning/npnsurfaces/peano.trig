# ----------------
# Peano arithmetic
# ----------------
#
# See https://en.wikipedia.org/wiki/Peano_axioms

@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/#>.

# add
(_:A) log:npn (true _:bng_1 -1).

_:bng_1 {
    (_:A 0) :add _:A.
}

(_:A _:B _:C) log:npn (_:bng_2 _:bng_3 -1).

_:bng_2 {
    (_:A _:B) :add _:C.
}

_:bng_3 {
    (_:A (:s _:B)) :add (:s _:C).
}

# multiply
(_:A) log:npn (true _:bng_4 -1).

_:bng_4 {
    (_:A 0) :multiply 0.
}

(_:A _:B _:C _:D) log:npn (_:bng_5 _:bng_6 -1).

_:bng_5 {
    (_:A _:B) :multiply _:D.
    (_:A _:D) :add _:C.
}

_:bng_6 {
    (_:A (:s _:B)) :multiply _:C.
}

# factorial
(_:A _:B) log:npn (_:bng_7 _:bng_8 -1).

_:bng_7 {
    (_:A (:s 0)) :fac _:B.
}

_:bng_8 {
    _:A :factorial _:B.
}

(_:A) log:npn (true _:bng_9 -1).

_:bng_9 {
    (0 _:A) :fac _:A.
}

(_:A _:B _:C _:D) log:npn (_:bng_10 _:bng_11 -1).

_:bng_10 {
    (_:B (:s _:A)) :multiply _:D.
    (_:A _:D) :fac _:C.
}

_:bng_11 {
    ((:s _:A) _:B) :fac _:C.
}

# query
(_:A _:B _:C) log:npn (_:bng_12 _:bng_12 0).

_:bng_12 {
    ((:s 0) (:s (:s 0))) :add _:A.
    (_:A (:s (:s 0))) :multiply _:B.
    _:B :factorial _:C.
}
