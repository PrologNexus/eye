@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix : <http://example.org/ns#>.

# French roads
:paris :oneway :orleans.
:paris :oneway :chartres.
:paris :oneway :amiens.
:orleans :oneway :blois.
:orleans :oneway :bourges.
:blois :oneway :tours.
:chartres :oneway :lemans.
:lemans :oneway :angers.
:lemans :oneway :tours.
:angers :oneway :nantes.

# oneway subproperty of path
:graph_rule1 a lingua:ForwardRule;
    lingua:premise (
        _:A :oneway _:B
    );
    lingua:conclusion (
        _:A :path _:B
    ).

# path transitive property
:graph_rule2 a lingua:ForwardRule;
    lingua:premise (
        _:A :path _:B
        _:B :path _:C
    );
    lingua:conclusion (
        _:A :path _:C
    ).

# query
:graph_query a lingua:QueryRule;
    lingua:premise (
        _:A :path :nantes
    );
    lingua:conclusion (
        _:A :path :nantes
    ).
