#!/bin/bash

RED="\e[31m"
GREEN="\e[32m"
YELLOW="\e[33m"
NORMAL="\e[0;39m"

OK=0
FAILED=0

echo -e "${YELLOW}----------------------${NORMAL}"
echo -e "${YELLOW}Running reasoning/test${NORMAL}"
echo -e "${YELLOW}----------------------${NORMAL}"
echo ""

for dir in */
do
    pushd "${dir}" > /dev/null
    echo -en "${dir} "
    ./test 2> /dev/null
    if [[ $(git diff . | wc -l) -eq 0 ]]; then
        echo -e "${GREEN}OK${NORMAL}"
        ((OK++))
    else
        echo -e "${RED}FAILED${NORMAL}"
        ((FAILED++))
    fi
    popd  > /dev/null
done
echo ""

echo -e "${YELLOW}Tests:${NORMAL} ${GREEN}${OK} OK${NORMAL} ${RED}${FAILED} FAILED${NORMAL}"

if [[ ${FAILED} -eq 0 ]]; then
    exit 0
else
    exit 2
fi
