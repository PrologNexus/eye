#!/bin/bash

RED="\e[31m"
GREEN="\e[32m"
BLUE="\e[94m"
NORMAL="\e[0;39m"

OK=0
FAILED=0

echo -e ${BLUE}"--------------------------"${NORMAL}
echo -e ${BLUE}"Running eye/reasoning/test"${NORMAL}
echo -e ${BLUE}"--------------------------"${NORMAL}
echo -e ""

for dir in */
do
    pushd "${dir}" > /dev/null
    ./test --quiet --skolem-genid 8b98b360-9a70-4845-b52c-c675af60ad01
    if [[ $(git status -s . | wc -l) -ne 0 ]]; then
        echo -e "${RED}FAILED${NORMAL}"
        ((FAILED++))
    else
        echo -e "${GREEN}OK${NORMAL}"
        ((OK++))
    fi
    popd  > /dev/null
    echo ""
done

echo -e "Tests: ${GREEN}${OK} OK${NORMAL} ${RED}${FAILED} FAILED${NORMAL}"

if [[ ${FAILED} -eq 0 ]]; then
    exit 0
else
    exit 2
fi
