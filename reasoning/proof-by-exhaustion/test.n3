@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/#>.

# saying A or saying B
true => ($
    {
        ?S :saying :A.
    }
    {
        ?S :saying :B.
    }
$).

# saying A means saying C
{
    ?S :saying :A.
} => {
    ?S :saying :C.
}.

# saying B means saying C
{
    ?S :saying :B.
} => {
    ?S :saying :C.
}.

# proof by exhaustion
{
    true => ($ ?A ?B $).
    ?A => ?C.
    ?B => ?C.
} log:query ?C.
