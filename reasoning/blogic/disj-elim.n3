@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/ns#>.

# bob is a person
:bob a :Person.

# saying A or saying B
(skolem:S) log:onNegativeSurface {
    skolem:S a :Person.
    () log:onNegativeSurface {
        skolem:S :saying :A.
    }.
    () log:onNegativeSurface {
        skolem:S :saying :B.
    }.
}.

# saying A means saying C
(skolem:S) log:onNegativeSurface {
    skolem:S :saying :A.
    () log:onNegativeSurface {
        skolem:S :saying :C.
    }.
}.

# saying B means saying C
(skolem:S) log:onNegativeSurface {
    skolem:S :saying :B.
    () log:onNegativeSurface {
        skolem:S :saying :C.
    }.
}.

# query
(skolem:S skolem:O) log:onQuerySurface {
    skolem:S :saying skolem:O.
}.
