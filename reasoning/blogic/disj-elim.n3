@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/ns#>.

# bob is a person
:bob a :Person.

# saying A or saying B
(_S) log:onNegativeSurface {
    _S a :Person.
    () log:onNegativeSurface {
        _S :saying :A.
    }.
    () log:onNegativeSurface {
        _S :saying :B.
    }.
}.

# saying A means saying C
(_S) log:onNegativeSurface {
    _S :saying :A.
    () log:onNegativeSurface {
        _S :saying :C.
    }.
}.

# saying B means saying C
(_S) log:onNegativeSurface {
    _S :saying :B.
    () log:onNegativeSurface {
        _S :saying :C.
    }.
}.

# query
(_S _O) log:onQuerySurface {
    _S :saying _O.
}.
