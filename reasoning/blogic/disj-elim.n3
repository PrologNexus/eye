@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/ns#>.

# bob is a person
:bob a :Person.

# saying A or saying B
(?S) log:onNegativeSurface {
    ?S a :Person.
    () log:onNegativeSurface {
        ?S :saying :A.
    }.
    () log:onNegativeSurface {
        ?S :saying :B.
    }.
}.

# saying A means saying C
(?S) log:onNegativeSurface {
    ?S :saying :A.
    () log:onNegativeSurface {
        ?S :saying :C.
    }.
}.

# saying B means saying C
(?S) log:onNegativeSurface {
    ?S :saying :B.
    () log:onNegativeSurface {
        ?S :saying :C.
    }.
}.

# query
(?S ?O) log:onQuerySurface {
    ?S :saying ?O.
}.
