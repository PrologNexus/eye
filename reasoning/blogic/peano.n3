# ----------------
# Peano arithmetic
# ----------------
#
# See https://en.wikipedia.org/wiki/Peano_axioms

@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/ns#>.

# add
(skolem:A) log:onNegativeSurface {
    () log:onNegativeSurface <<(skolem:A 0) :add skolem:A>>.
}.

(skolem:A skolem:B skolem:C) log:onNegativeSurface {
    () log:onNegativeSurface <<(skolem:A (:s skolem:B)) :add (:s skolem:C)>>.
    (skolem:A skolem:B) :add skolem:C.
}.

# multiply
(skolem:A) log:onNegativeSurface {
    () log:onNegativeSurface <<(skolem:A 0) :multiply 0>>.
}.

(skolem:A skolem:B skolem:C skolem:D) log:onNegativeSurface {
    () log:onNegativeSurface <<(skolem:A (:s skolem:B)) :multiply skolem:C>>.
    (skolem:A skolem:B) :multiply skolem:D.
    (skolem:A skolem:D) :add skolem:C.
}.

# factorial
(skolem:A skolem:B) log:onNegativeSurface {
    () log:onNegativeSurface <<skolem:A :factorial skolem:B>>.
    (skolem:A (:s 0)) :fac skolem:B.
}.

(skolem:A) log:onNegativeSurface {
    () log:onNegativeSurface <<(0 skolem:A) :fac skolem:A>>.
}.

(skolem:A skolem:B skolem:C skolem:D) log:onNegativeSurface {
    () log:onNegativeSurface <<((:s skolem:A) skolem:B) :fac skolem:C>>.
    (skolem:B (:s skolem:A)) :multiply skolem:D.
    (skolem:A skolem:D) :fac skolem:C.
}.

# question
(skolem:A skolem:B skolem:C) log:onQuestionSurface {
    ((:s 0) (:s (:s 0))) :add skolem:A.
    (skolem:A (:s (:s 0))) :multiply skolem:B.
    skolem:B :factorial skolem:C.
    () log:onAnswerSurface {
        :result :is skolem:C.
    }.
}.
