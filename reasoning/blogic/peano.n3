# ----------------
# Peano arithmetic
# ----------------
#
# See https://en.wikipedia.org/wiki/Peano_axioms

@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/ns#>.

# add
(_A) log:onNegativeSurface {
    () log:onNegativeSurface <<(_A 0) :add _A>>.
}.

(_A _B _C) log:onNegativeSurface {
    () log:onNegativeSurface <<(_A (:s _B)) :add (:s _C)>>.
    (_A _B) :add _C.
}.

# multiply
(_A) log:onNegativeSurface {
    () log:onNegativeSurface <<(_A 0) :multiply 0>>.
}.

(_A _B _C _D) log:onNegativeSurface {
    () log:onNegativeSurface <<(_A (:s _B)) :multiply _C>>.
    (_A _B) :multiply _D.
    (_A _D) :add _C.
}.

# factorial
(_A _B) log:onNegativeSurface {
    () log:onNegativeSurface <<_A :factorial _B>>.
    (_A (:s 0)) :fac _B.
}.

(_A) log:onNegativeSurface {
    () log:onNegativeSurface <<(0 _A) :fac _A>>.
}.

(_A _B _C _D) log:onNegativeSurface {
    () log:onNegativeSurface <<((:s _A) _B) :fac _C>>.
    (_B (:s _A)) :multiply _D.
    (_A _D) :fac _C.
}.

# question
(_A _B _C) log:onQuestionSurface {
    ((:s 0) (:s (:s 0))) :add _A.
    (_A (:s (:s 0))) :multiply _B.
    _B :factorial _C.
    () log:onAnswerSurface {
        :result :is _C.
    }.
}.
