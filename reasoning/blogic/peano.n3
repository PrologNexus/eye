# ----------------
# Peano arithmetic
# ----------------
#
# See https://en.wikipedia.org/wiki/Peano_axioms

@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/ns#>.

# add
(?A) log:onNegativeSurface {
    () log:onNegativeSurface <<(?A 0) :add ?A>>.
}.

(?A ?B ?C) log:onNegativeSurface {
    () log:onNegativeSurface <<(?A (:s ?B)) :add (:s ?C)>>.
    (?A ?B) :add ?C.
}.

# multiply
(?A) log:onNegativeSurface {
    () log:onNegativeSurface <<(?A 0) :multiply 0>>.
}.

(?A ?B ?C ?D) log:onNegativeSurface {
    () log:onNegativeSurface <<(?A (:s ?B)) :multiply ?C>>.
    (?A ?B) :multiply ?D.
    (?A ?D) :add ?C.
}.

# factorial
(?A ?B) log:onNegativeSurface {
    () log:onNegativeSurface <<?A :factorial ?B>>.
    (?A (:s 0)) :fac ?B.
}.

(?A) log:onNegativeSurface {
    () log:onNegativeSurface <<(0 ?A) :fac ?A>>.
}.

(?A ?B ?C ?D) log:onNegativeSurface {
    () log:onNegativeSurface <<((:s ?A) ?B) :fac ?C>>.
    (?B (:s ?A)) :multiply ?D.
    (?A ?D) :fac ?C.
}.

# question
(?A ?B ?C) log:onQuestionSurface {
    ((:s 0) (:s (:s 0))) :add ?A.
    (?A (:s (:s 0))) :multiply ?B.
    ?B :factorial ?C.
    () log:onAnswerSurface {
        :result :is ?C.
    }.
}.
