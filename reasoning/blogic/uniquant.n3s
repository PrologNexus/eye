@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/>.

# Everybody loves somebody who is lonely
(_:A _:B) log:onNegativeSurface {
    (_:A) log:skolem _:B.
    () log:negativeTriple {
        _:A :loves _:B.
    }.
}.

(_:A _:B) log:onNegativeSurface {
    (_:A) log:skolem _:B.
    () log:negativeTriple {
        _:B :is :lonely.
    }.
}.

# query
(_:x) log:onQuerySurface {
    :bob :loves _:x.
    _:x :is :lonely.
}.
