@prefix owl: <http://www.w3.org/2002/07/owl#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/ns#>.

# slide 33 example from https://www.slideshare.net/PatHayes/blogic-iswc-2009-invited-talk

# owl restriction
:aaa owl:onProperty :bbb.
:aaa owl:allValuesFrom :ccc.

# the following 2 triples should entail :yyy a :ccc.
#:xxx a :aaa.
#:xxx :bbb :yyy.

# the following codex should entail :xxx a :aaa.
(_y) log:onNegativeSurface {
    :xxx :bbb _y.
    () log:onNegativeSurface {
        _y a :ccc.
    }.
}.

# owl:allValuseFrom description logic
(_a _b _c) log:onNegativeSurface {
    _a owl:onProperty _b.
    _a owl:allValuesFrom _c.
    () log:onNegativeSurface {
        (_x _y) log:onNegativeSurface {
            _x a _a.
            _x _b _y.
            () log:onNegativeSurface {
                _y a _c.
            }.
        }.
        (_x) log:onNegativeSurface {
            (_y) log:onNegativeSurface {
                _x _b _y.
                () log:onNegativeSurface {
                    _y a _c.
                }.
            }.
            () log:onNegativeSurface {
                _x a _a.
            }.
        }.
    }.
}.

# query
(_S _C) log:onQuerySurface {
    _S a _C.
}.
