# ---------------------------
# Semifol rules -- Jos De Roo
# ---------------------------

@prefix log: <http://www.w3.org/2000/10/swap/log#>.

# resolution
{
    ?A => {
        ?B log:or ?C.
    }.
    ?B => ?D.
    ?C => ?E.
} => {
    ?A => {
        ?D log:or ?E.
    }.
}.

# factoring
{
    ?A => {
        ?B log:or ?B.
    }.
} => {
    ?A => ?B.
}.

# negation
{
    ?A => ?B.
    ?B log:not true.
} => {
    ?A log:not true.
}.

{
    ?A => {
        ?B log:or ?C.
    }.
    ?B log:not true.
} => {
    ?A => ?C.
}.

{
    ?A => {
        ?B log:or ?C.
    }.
    ?C log:not true.
} => {
    ?A => ?B.
}.

# blow a fuse
{
    ?A log:not true.
    ?A log:call true.
} => false.
