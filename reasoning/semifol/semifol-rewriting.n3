# -----------------
# Semifol rewriting
# -----------------

@prefix log: <http://www.w3.org/2000/10/swap/log#>.

# asserted or
{
    ?A log:or ?B.
} => {
    true => {
        ?A log:or ?B.
    }.
}.

# asserted nested or
{
    ?A log:or {
        ?B log:or ?C.
    }.
} => {
    true => {
        ?B log:or {
            ?A log:or ?C.
        }.
    }.
}.

# double negation
{
    {
        ?A log:not true.
    } log:not true.
} => {
    true => ?A.
}.

# erase
{
    ?A => ?B.
    ?A log:notEqualTo true.
    ?B log:includes {
        ?A log:not true.
    }.
} => {
    ?A log:not true.
}.
