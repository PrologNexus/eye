@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix rule: <http://www.w3.org/2000/10/swap/rule#>.
@prefix : <http://example.org/ns#>.

# facts
:Socrates a :Human, :Immortal.
:Human rdfs:subClassOf :Mortal.

# rdfs subclass
:rdfs_subclass_rule a rule:ForwardRule;
    rule:vars (
        _:A
        _:B
        _:S
    );
    rule:premise (
        (_:A rdfs:subClassOf _:B)
        (_:S rdf:type _:A)
    );
    rule:conclusion (
        (_:S rdf:type _:B)
    ).

# inference fuse
:fuse a rule:ForwardRule;
    rule:vars (
        _:S
    );
    rule:premise (
        (_:S rdf:type :Mortal)
        (_:S rdf:type :Immortal)
    );
    rule:conclusion false.

# query
:socrates_query a rule:QueryRule;
    rule:vars (
        _:S
    );
    rule:premise (
        (_:S rdf:type :Mortal)
    );
    rule:conclusion (
        (_:S rdf:type :Mortal)
    ).
