@prefix rule: <http://eyereasoner.github.io/rule#>.
@prefix : <http://example.org/ns#>.

# French roads
:paris :oneway :orleans.
:paris :oneway :chartres.
:paris :oneway :amiens.
:orleans :oneway :blois.
:orleans :oneway :bourges.
:blois :oneway :tours.
:chartres :oneway :lemans.
:lemans :oneway :angers.
:lemans :oneway :tours.
:angers :oneway :nantes.

# oneway subproperty of path
:oneway_subproperty_of_path a rule:ForwardRule;
    rule:graffiti (
        _:A
        _:B
    );
    rule:premise (
        (_:A :oneway _:B)
    );
    rule:conclusion (
        (_:A :path _:B)
    ).

# path transitive property
:path_transitive_property a rule:ForwardRule;
    rule:graffiti (
        _:A
        _:B
        _:C
    );
    rule:premise (
        (_:A :path _:B)
        (_:B :path _:C)
    );
    rule:conclusion (
        (_:A :path _:C)
    ).

# query
:query_path_to_nantes a rule:QueryRule;
    rule:graffiti (
        _:A
    );
    rule:premise (
        (_:A :path :nantes)
    );
    rule:conclusion (
        (_:A :path :nantes)
    ).
