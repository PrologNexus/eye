@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix rule: <http://eyereasoner.github.io/rule#>.
@prefix : <http://example.org/ns#>.

# \Every x: type(x, Resource)
:universal_statements_rule1 a rule:BackwardRule;
    rule:vars (
        _:X
    );
    rule:conclusion (
        (_:X rdf:type rdfs:Resource)
    );
    rule:premise ().

# Everybody loves somebody who is lonely
:universal_statements_rule2 a rule:BackwardRule;
    rule:vars (
        _:A
        _:B
    );
    rule:conclusion (
        (_:A :loves _:B)
    );
    rule:premise (
        ((_:A) log:skolem _:B)
    ).

:universal_statements_rule3 a rule:BackwardRule;
    rule:vars (
        _:B
        _:A
    );
    rule:conclusion (
        (_:B :is :lonely)
    );
    rule:premise (
        ((_:A) log:skolem _:B)
    ).

# queries
:universal_statements_query1 a rule:QueryRule;
    rule:vars ();
    rule:premise (
        (:pat rdf:type rdfs:Resource)
    );
    rule:conclusion (
        (:pat rdf:type rdfs:Resource)
    ).

:universal_statements_query2 a rule:QueryRule;
    rule:vars (
        _:X
    );
    rule:premise (
        (:bob :loves _:X)
        (_:X :is :lonely)
    );
    rule:conclusion (
        (:bob :loves _:X)
        (_:X :is :lonely)
    ).
