@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix rule: <http://eyereasoner.github.io/rule#>.
@prefix : <http://example.org/universal-statements#>.

# \Every x: type(x, Resource)
[]  rdf:type rule:BackwardRule;
    rule:premise ();
    rule:conclusion (
        (_:x rdf:type rdfs:Resource)
    ).

# Everybody loves somebody who is lonely
[]  rdf:type rule:BackwardRule;
    rule:premise (
        ((_:A) log:skolem _:B)
    );
    rule:conclusion (
        (_:A :loves _:B)
    ).

[]  rdf:type rule:BackwardRule;
    rule:premise (
        ((_:A) log:skolem _:B)
    );
    rule:conclusion (
        (_:B :is :lonely)
    ).

# queries
[]  rdf:type rule:QueryRule;
    rule:premise (
        (:pat rdf:type rdfs:Resource)
    );
    rule:conclusion (
        (:pat rdf:type rdfs:Resource)
    ).

[]  rdf:type rule:QueryRule;
    rule:premise (
        (:bob :loves _:x)
        (_:x :is :lonely)
    );
    rule:conclusion (
        (:bob :loves _:x)
        (_:x :is :lonely)
    ).
